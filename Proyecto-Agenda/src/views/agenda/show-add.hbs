<div class="row">
    {{#each agendas}}
    <div class="col-md-4" >
        <div class="card" style="background-color:#F4EA6A">
            <div class="card-body" >
                <h4 class="card-title d-flex justify-content-between align-items-center"><p >
                {{Nombre}}</p><a href="/agenda/edit/{{_id}}"><i class="fas fa-edit"></i></a></h4>

                <p><strong>Direccion: </strong>{{Direccion}}</p>
                <p><strong>--- :</strong>{{TDireccion}}</p>
                <p><strong>Telefono: </strong>{{Telefono}}</p>
                <p><strong>Correo: </strong>{{Correo}}</p>
                <p><strong>Red Social: </strong>{{TRed}}</p>
                <p><strong>Ocupacion: </strong>{{Ocupacion}}</p>
                <p><strong>Identidad: </strong>{{Identidad}}</p>
                <p><strong>Fecha de Nacimiento: </strong>{{FechaN}}</p>
                <p><strong>Descripcion: </strong>{{Descripcion}}</p>
                <Strong>Fecha de creacion:</Strong><p>{{FechaC}}</p>               
                <form action="/agenda/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                    <button  type ="submit"class="btn btn-danger btn-block">Eliminar</button>
                </form>

            </div>
        </div>

    </div>  
  
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="Lead" >Empieza a agendar</p>
            <a href="/agenda/add" class="btn btn-success">Nuevo Registro</a>
        </div>
    </div>

    {{/each}} 

</div>
<div class="row">
    <div class="col-md-4">
    <hr>
    </div>
    <div class="col-md-4"><hr>
    </div>
    <div class="col-md-4">
    <a href="/agenda/add" class="btn btn-success" style="margin-left:200px">Agregar</a>
</div>

</div>
